<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SubTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:paddingEnd">@dimen/sub_title_padding_end</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/sub_title_text_color</item>
        <item name="android:textSize">@dimen/sub_title_text_size</item>
    </style>

    <style name="SubContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:textColor">@color/sub_content_text_color</item>
        <item name="android:textSize">@dimen/sub_content_text_size</item>
    </style>

</resources>
